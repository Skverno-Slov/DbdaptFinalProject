@page
@model StoreWeb.Pages.OrdersModel

@{
    ViewData["Title"] = "Заказы";
}

<h1>Заказы</h1>

@if(Model.OrderInfo.Count > 0)
{
    @*Отображение заказов в виде таблицы*@
    <table class="table">
        <thead>
            @*Заголовок (Display name для свойств OrderInfo)*@
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrderInfo[0].OrderInfoId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderInfo[0].Compound)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderInfo[0].OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrderInfo[0].FinalPrice)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @*Тело таблицы*@
            @foreach (var item in Model.OrderInfo) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderInfoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Compound)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FinalPrice)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    @*Если у пользователя нет заказов, выводить сообщение*@
    <div style="display:grid; place-content:center; height:200px">
        <h1 style="color:dimgrey"> У вас нет заказов :(</h1>
    </div>
}

@inject IHttpContextAccessor Accessor;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Маркетплейс</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StoreWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">BootWay</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="margin:10px">
                            <a class="btn btn-primary" style="background-color:#00FA9A;
                                border-color:black; color:black" asp-area="" asp-page="/Goods">Товары</a>
                        </li>
                        <li style="margin:10px">
                            @if (Accessor.HttpContext.Session.GetString("Role") is not null)
                            {
                                <a class="btn btn-primary" style="background-color:#00FA9A;
                                border-color:black; color:black" asp-area="" asp-page="/Orders">Заказы</a>
                            }
                        </li>
                    </ul>
                </div>
                @if (Accessor.HttpContext.Session.GetString("Role") is null)
                {
                    <a class="btn btn-primary" style="background-color:#00FA9A;
                        border-color:black; color:black" asp-area="" asp-page="/Login">Войти</a>
                }
                else
                {
                    <p style="margin:10px">@Accessor.HttpContext.Session.GetString("FullName")</p>
                    <a class="btn btn-primary" style="background-color:#00FA9A;
                        border-color:black; color:black" asp-area="" asp-page="/Login" asp-page-handler="Logout">Выйти</a>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy;  BootWay - 2025
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<Page x:Class="StoreWpf.View.Pages.ProductsListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StoreWpf.View.Pages" xmlns:viewmodel="clr-namespace:StoreWpf.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:ProductListPageViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsListPage" Loaded="ProductListPage_Loaded">

    <DockPanel>
        <StackPanel DockPanel.Dock="Right"
                    Orientation="Vertical"
                    Margin="5px">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Поиск:"/>
                <TextBox Text="{Binding ProductDescription}"
                         Width="200">
                </TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Производители:"/>
                <ComboBox ItemsSource="{Binding Manufacturers}"
                          SelectedItem="{Binding SelectedManufacturer}"
                          Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Цена до:"/>
                <TextBox x:Name="MaxPriceTextBox" Text="{Binding MaxPrice}"
                         Width="200"
                         PreviewTextInput="MaxPriceTextBox_PreviewTextInput">
                </TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Только со скидкой"/>
                <CheckBox IsChecked="{Binding IsDiscounted}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Только в наличии"/>
                <CheckBox IsChecked="{Binding IsInStock}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Сортировка"/>
                <ComboBox ItemsSource="{Binding SortColumns}"
                          SelectedItem="{Binding SelectedSortColumn}"
                          Width="200"/>
            </StackPanel>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button Content="Добавить" Command="{Binding NavigetToAddPageCommand}"/>
            <Button Content="Изменить" Command="{Binding NavigetToUpdatePageCommand}"/>
            <Button Content="Удалить" Command="{Binding DeleteCommand}"/>
        </StackPanel>
        <DataGrid ItemsSource="{Binding ProductCards}"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  SelectedItem="{Binding SelectedProduct}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Категория" 
                            Binding="{Binding CategoryName}">
                </DataGridTextColumn>

                <DataGridTextColumn Header="Наименование" 
                            Binding="{Binding ProductName}">
                </DataGridTextColumn>

                <DataGridTextColumn Header="Описание" 
                            Binding="{Binding Description}">
                </DataGridTextColumn>

                <DataGridTextColumn Header="Производитель" 
                            Binding="{Binding ManufacturerName}">
                </DataGridTextColumn>

                <DataGridTextColumn Header="Поставщик" 
                            Binding="{Binding SupplierName}">
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Цена">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <StackPanel>
                                    <TextBlock Text="{Binding DiscountedPrice}"
                                                Foreground="Black"
                                                FontWeight="Bold">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Discount}" Value="0">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <TextBlock Text="{Binding Price}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#D32F2F"/>

                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Discount}" Value="0">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Скидка"
                                    Binding="{Binding Discount, StringFormat={}{0}%}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsDiscountHight}" Value="true">
                                    <Setter Property="Background"  Value="#2E8B57"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Еденица изменения" 
                            Binding="{Binding UnitName}">
                </DataGridTextColumn>

                <DataGridTextColumn Header="На складе" 
                                    Binding="{Binding StoredQuantity}">
                </DataGridTextColumn>

                <DataGridTextColumn Header="Изображение" 
                    Binding="{Binding Photo}">
                </DataGridTextColumn>
            </DataGrid.Columns>
            <DataGrid.ItemContainerStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding StoredQuantity}" Value="0">
                            <Setter Property="Background" Value="LightBlue"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.ItemContainerStyle>
        </DataGrid>
    </DockPanel>
</Page>
